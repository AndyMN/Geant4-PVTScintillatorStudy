NumEvents = 10;																		# Number of events in a single run
SlabThickness = 100;																# Thickness of slab (in mm)
#EDiscreteValues = [5];


AnalyzeData = 1;			# Define if we want to analyze the simulation data.
SaveHistograms = 1;		# Define if we want to save the histograms to a root file (SaveHistograms or MakePlots should be 1)
