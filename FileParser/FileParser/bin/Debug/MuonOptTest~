DataSetPostFix = Opt;																# Any string to append to root filenames to differentiate datasets
GenerateDataFiles = 0;
UseOpticalPhysics = 1;
DataFileDirectory = /media/andy/LaCie/Datasets/;		# Directory to store .root datafiles (It will be stored in DataFileDirectory + DataSetPostFix)

DataFileOption = RECREATE;													# Option for a TFile, RECREATE = Make a new one regardless of existence, NEW = Make one if doesn't exist yet
ERangeStart = [[1, 100], [2, 5]];																	# Start value for an energy range for every particle type (set to -1 if not using an energy range)
ERangeStop = [[10, 1000]];																	# End value for an energy range for every particle type (set to -1 if not using an energy range)
ERangeStep = [[1, 100]];																		# Step size for the pre defined energy range for every particle type 
